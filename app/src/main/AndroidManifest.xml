<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.laam.laammedia">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher_new"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_new_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name="com.laam.laammedia.ui.activities.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.laam.laammedia.ui.activities.RegisterActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.MainActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.NewMessageActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.AddPostActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.PostActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.ProfileActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.DirectMessageActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.HeaderMessageActivity" />
        <activity android:name="com.laam.laammedia.ui.activities.LoginActivity" />
    </application>

</manifest>